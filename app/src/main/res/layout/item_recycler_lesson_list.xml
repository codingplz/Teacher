<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:id="@+id/marker"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/marker_p" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/rv_item_card"
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <!-- Bottom View Start-->
        <LinearLayout
            android:background="@color/color_low_red"
            android:id="@+id/layout_delete_lesson"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <!--What you want to show-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_forever_white_18dp"
                android:id="@+id/iv_study_info" />
        </LinearLayout>
        <!-- Bottom View End-->

        <LinearLayout
            android:background="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--What you want to show in SurfaceView-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_lesson"
                android:orientation="horizontal">
                <TextView
                    android:text="第一课时"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lesson_list_index"
                    android:layout_gravity="center"
                    android:layout_weight="0.4" />

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/tv_lesson_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Random" />
            </LinearLayout>
        </LinearLayout>
        </com.daimajia.swipe.SwipeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>