<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layout_no_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_upload_test"
            android:gravity="center"
            android:background="@color/color_red_main"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:text="暂无练习，点击上传"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
<LinearLayout
    android:visibility="invisible"
    android:id="@+id/layout_has_test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_universal_recycle_list">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/universal_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
</FrameLayout>