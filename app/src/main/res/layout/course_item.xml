<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    app:cardCornerRadius="5dp"
    app:elevation="1dp">

    <LinearLayout
        android:id="@+id/base_swipe_item_container"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_courseImage"
            android:layout_width="92dp"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical|left" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|right">
            <TextView
                android:id="@+id/tv_courseName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="19dp"
                android:text="测试数据测试数据测试数据"
                android:gravity="center_vertical|left"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">
            <TextView
                android:id="@+id/tv_followStudent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="关注人数"
                android:layout_weight="1"
                android:gravity="center_vertical|left"/>
            <TextView
                android:id="@+id/tv_followNumber"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="1.2K"
                android:layout_weight="1"
                android:gravity="center_vertical|left"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_uploadChapter"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="已上传5/8个单元"
                android:textColor="#3949ab"
                android:textSize="15dp"
                android:gravity="center_vertical|left"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>