<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mrwen.activity.CourseInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/divider_line">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:layout_gravity="center"
                android:text="课程名称"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_course_check_courseName"
                style="@style/right_info_text_style"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/coursen_edit_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                style="@style/left_info_text_style"
                android:text="封        面"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:id="@+id/iv_course_check_cover"
                android:src="@drawable/default_cover"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:text="科        目"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_course_check_subject"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dip"
                android:text="适用年级"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_course_check_grade"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dip"
                android:text="适用学期"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_course_check_semester"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dip"
                android:text="课程种类"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_course_check_major"
                style="@style/right_info_text_style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dip"
                android:text="单元数目"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_course_check_chapterNumber"
                style="@style/right_info_text_style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/course_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dp"
                android:text="课程介绍"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:maxLines="1"
                android:id="@+id/tv_course_check_description"
                style="@style/right_info_text_style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            android:id="@+id/layout_course_check_teacher"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/course_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dp"
                android:text="任课老师"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:maxLines="1"
                android:id="@+id/tv_course_check_teacher"
                style="@style/right_info_text_style"
                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>