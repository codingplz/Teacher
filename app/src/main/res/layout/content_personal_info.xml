<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BFBFBF"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BFBFBF"
    android:scrollbars="vertical"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/divider_line">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            style="@style/person_info_check_rectangle_linear_layout"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                style="@style/left_info_text_style"
                android:text="头像"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/iv_person_info_photo"
                android:src="@drawable/default_photo"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:layout_gravity="center"
                style="@style/left_info_text_style"
                android:text="姓名"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="陈老师"
                android:id="@+id/tv_person_info_name"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:layout_gravity="center"
                style="@style/left_info_text_style"
                android:text="身份"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="老师"
                android:id="@+id/tv_person_info_identity"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"

                style="@style/left_info_text_style"
                android:text="性别"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="男"
                android:id="@+id/tv_person_info_gender"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout"
    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:text="年级"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="小学"
                android:id="@+id/tv_person_info_rank"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/person_info_check_rectangle_height"
        style="@style/person_info_check_rectangle_linear_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/left_info_text_style"
            android:text="学校"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            android:text="武汉大学"
            android:id="@+id/tv_person_info_school"
            style="@style/right_info_text_style"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:text="地区"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="湖北 武汉"
                android:id="@+id/tv_person_info_region"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:text="签名"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="制心一处，无事不办"
                android:maxLines="1"
                android:id="@+id/tv_person_info_signature"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider_line">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:text="手机"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="15888888888"
                android:id="@+id/tv_person_info_phone"
                style="@style/right_info_text_style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/person_info_check_rectangle_height"
            style="@style/person_info_check_rectangle_linear_layout">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:text="邮箱"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_info_check_rectangle_height"
                android:text="123456@126.com"
                android:id="@+id/tv_person_info_email"
                style="@style/right_info_text_style"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
