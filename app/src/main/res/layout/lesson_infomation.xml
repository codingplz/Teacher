<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/divider_line">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:layout_gravity="center"
                android:text="课时名称"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="人教版语文必修五"
                android:id="@+id/tv_lesson_info_name"
                style="@style/right_info_text_style"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dip"
                android:text="知识点"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="知识点"
                android:id="@+id/tv_lesson_info_knowledgePoint"
                style="@style/right_info_text_style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height"
            style="@style/coursen_information_check_rectangle_linear_layout">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/course_info_check_rectangle_height"
                style="@style/left_info_text_style"
                android:layout_marginLeft="10dp"
                android:text="课时介绍"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="本课程是对古诗词的分析..."
                android:id="@+id/tv_lesson_info_description"
                style="@style/right_info_text_style"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_lesson_video"
            style="@style/coursen_information_check_rectangle_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height">

            <TextView
                style="@style/left_info_text_style"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="视频查看" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_arrow_check" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_lesson_statistic"
            style="@style/coursen_information_check_rectangle_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height">

            <TextView
                style="@style/left_info_text_style"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="课时统计" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_arrow_check" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_lesson_test"
            style="@style/coursen_information_check_rectangle_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/course_info_check_rectangle_height">

            <TextView
                style="@style/left_info_text_style"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="课后练习" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ic_arrow_check" />
        </RelativeLayout>




    </LinearLayout>

</LinearLayout>